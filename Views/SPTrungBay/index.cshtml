                                <th>Option 2</th>
                                <th>Mã Chi Nhánh</th>
                                <th></th>
                                <th hidden>STT</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                          
                                foreach (DataRow row2 in Model.Tables[0].Rows)
                                {

                                    var currentSoCt = row2["Ma_Dt"].ToString();
                                  
